<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jangerhard.tutor.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/tv_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:id="@+id/card1"
        style="@style/MyCardViewStyle"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:clipToPadding="false"
        android:visibility="gone"
        android:layout_below="@id/tv_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutor 1"
                android:id="@+id/tv_tutor1_name"
                android:gravity="top"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tutor1_email"
                android:layout_below="@id/tv_tutor1_name"
                android:text="test@pace.edu"
                android:textSize="15sp"/>

            <Button
                android:layout_width="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/bTutor1"
                android:layout_alignParentBottom="true"
                android:enabled="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_Tutor1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:elevation="2dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        style="@style/MyCardViewStyle"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:id="@+id/card2"
        android:clipToPadding="false"
        android:visibility="gone"
        android:layout_below="@id/card1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutor 2"
            android:id="@+id/tv_tutor2_name"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test@pace.edu"
            android:layout_below="@id/tv_tutor2_name"
            android:id="@+id/tv_tutor2_email"
            android:gravity="center"
            android:textSize="15sp"/>

        <Button
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bTutor2"
            android:text="@string/email"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:enabled="true" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_Tutor2"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:elevation="2dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFeedback"
        android:text="@string/title_feedback"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</RelativeLayout>
